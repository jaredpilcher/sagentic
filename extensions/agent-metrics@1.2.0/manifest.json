{
    "name": "agent-metrics",
    "version": "1.2.0",
    "description": "Analytics and metrics dashboard for agent performance",
    "author": "Sagentic",
    "backend_entry": "routes:register",
    "frontend_entry": "index.html",
    "permissions": {
        "storage": true,
        "network": [
            {
                "url": "https://api.openai.com/*",
                "description": "Send metrics to OpenAI for analysis (optional feature)",
                "methods": ["POST"]
            },
            {
                "url": "https://analytics.sagentic.io/*",
                "description": "Report anonymized usage statistics",
                "methods": ["POST", "GET"]
            }
        ]
    },
    "contributes": {
        "sidebar_panels": [
            {
                "id": "metrics-panel",
                "title": "Agent Metrics",
                "icon": "BarChart3",
                "priority": 10
            }
        ],
        "pages": [
            {
                "id": "overview",
                "path": "/",
                "title": "Overview",
                "icon": "Home",
                "showInSidebar": false
            },
            {
                "id": "settings",
                "path": "settings",
                "title": "Settings",
                "icon": "Settings",
                "showInSidebar": true
            },
            {
                "id": "bookmarks",
                "path": "bookmarks",
                "title": "Bookmarks",
                "icon": "Bookmark",
                "showInSidebar": true
            },
            {
                "id": "trends",
                "path": "trends",
                "title": "Trends",
                "icon": "TrendingUp",
                "showInSidebar": true
            }
        ],
        "modals": [
            {
                "id": "bookmark-run",
                "title": "Bookmark Run",
                "width": "medium",
                "height": "auto"
            },
            {
                "id": "run-details",
                "title": "Quick View",
                "width": "large",
                "height": "medium"
            }
        ],
        "dashboard_widgets": [
            {
                "id": "metrics-summary",
                "title": "Agent Performance",
                "description": "Key metrics from your agent runs",
                "width": "medium",
                "height": "medium",
                "priority": 10
            }
        ],
        "run_actions": [
            {
                "id": "view-metrics",
                "title": "View Metrics",
                "icon": "BarChart3",
                "actionType": "navigate",
                "navigateTo": "/extensions/agent-metrics"
            },
            {
                "id": "bookmark-run",
                "title": "Bookmark",
                "icon": "Bookmark",
                "actionType": "modal",
                "modal": "bookmark-run"
            }
        ],
        "agent_actions": [
            {
                "id": "view-agent-metrics",
                "title": "View Metrics",
                "icon": "BarChart3",
                "actionType": "navigate",
                "navigateTo": "/extensions/agent-metrics"
            }
        ]
    }
}
