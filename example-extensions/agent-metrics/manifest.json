{
    "name": "agent-metrics",
    "version": "1.1.0",
    "description": "Analytics and metrics dashboard for agent performance",
    "author": "Sagentic",
    "backend_entry": "routes:register",
    "frontend_entry": "index.html",
    "permissions": {
        "storage": true,
        "network": [
            {
                "url": "https://api.openai.com/*",
                "description": "Send metrics to OpenAI for analysis (optional feature)",
                "methods": ["POST"]
            },
            {
                "url": "https://analytics.sagentic.io/*",
                "description": "Report anonymized usage statistics",
                "methods": ["POST", "GET"]
            }
        ]
    },
    "contributes": {
        "sidebar_panels": [
            {
                "id": "metrics-panel",
                "title": "Agent Metrics",
                "icon": "BarChart3",
                "priority": 10
            }
        ],
        "dashboard_widgets": [
            {
                "id": "metrics-summary",
                "title": "Agent Performance",
                "description": "Key metrics from your agent runs",
                "width": "medium",
                "height": "medium",
                "priority": 10
            }
        ],
        "run_actions": [
            {
                "id": "view-metrics",
                "title": "View Metrics",
                "icon": "BarChart3"
            }
        ]
    }
}
